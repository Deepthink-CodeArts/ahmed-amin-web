# Database Configuration
# Will use project.config.json values if not set
DATABASE_URL=postgresql://username:password@localhost:5432/deepbase_cms_db

# Security
SECRET_KEY=your-super-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://yourdomain.com

# Base URL for file uploads (set this for production)
# For localhost: leave empty or set to http://localhost:8000
# For VPS: set to https://yourdomain.com
BASE_URL=

# Environment
ENVIRONMENT=development

# Email Configuration (will use project.config.json values if not set)
MAIL_USERNAME=admin@localhost
MAIL_PASSWORD=your-email-password
MAIL_FROM=admin@localhost
MAIL_PORT=587
MAIL_SERVER=mail.localhost
MAIL_FROM_NAME=DeepBase CMS
USE_CREDENTIALS=True
VALIDATE_CERTS=True
